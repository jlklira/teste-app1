<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/listview_items_tfvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="tfvname"/>

    <TextView
        android:id="@+id/listview_items_botname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listview_items_tfvname"
        android:layout_marginTop="8dp"
        android:textColor="#000"
        android:text="botname"/>

    <TextView
        android:id="@+id/listview_items_othname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listview_items_botname"
        android:layout_marginTop="8dp"
        android:textColor="#000"
        android:text="othname"/>


    <ImageView
        android:id="@+id/listview_items_imageurl"
        android:layout_below="@id/listview_items_othname"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true" />

</RelativeLayout>